static.smcoco.com {
  root ./public/static
  cors
  gzip
}

smcoco.com {
  gzip
  root ./public/static/home
  rewrite / {
    regexp .*
    to /
  }
  errors {
    404 index.html
  }
}

auth.smcoco.com {
  gzip
  root ./public/static/auth
  rewrite / {
    regexp .*
    to /
  }
  errors {
    404 index.html
  }
}

music.smcoco.com {
  gzip
  root ./public/static/music
  rewrite / {
    regexp .*
    to /
  }
  errors {
    404 index.html
  }
}

api.smcoco.com {
  gzip
  proxy / localhost:9999
}
